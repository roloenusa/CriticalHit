<p id="notice"><%= notice %></p>

<!-- Service Panels -->
<!-- The circle icons use Font Awesome's stacked icon classes. For more information, visit http://fontawesome.io/examples/ -->
<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Encounters</h2>
    </div>
    <table>
      <thead>
        <tr>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @encounters.each do |encounter| %>
          <tr>
            <td><%= link_to 'Show', encounter %></td>
            <td><%= link_to 'Edit', edit_encounter_path(encounter) %></td>
            <td><%= link_to 'Destroy', encounter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <hr />
    <%= link_to 'New Encounter', new_encounter_path %>
</div>
<!-- /.row -->
